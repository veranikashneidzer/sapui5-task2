<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
        id="confirmationDialog"
        title ="{i18n>confirmationDialogHeaderText}">
        <content>
            <Text text="{i18n>confirmationDialogText}" />
        </content>
        <beginButton>
            <Button
                text="{i18n>dialogYesButtonText}"
                press=".onCloseDialog"/>
        </beginButton>
        <endButton>
            <Button
                text="{i18n>dialogNoButtonText}"
                press=".onCloseDialog"/>
        </endButton>
   </Dialog>
</core:FragmentDefinition>