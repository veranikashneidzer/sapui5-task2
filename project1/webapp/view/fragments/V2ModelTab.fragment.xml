<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Table
        id="productsListV2"
        width="auto"
        mode="MultiSelect"
        selectionChange=".onProductsTableV2SelectedItemsChanged"
        items="{
            path: 'oDataV2>/Products'
        }">
        <headerToolbar>
            <OverflowToolbar id="otbSubheader">
                <Title text="Products" level="H2" />
                <ToolbarSpacer />
                <Button
                    text="{i18n>buttonDelete}"
                    class="sapUiTinyMarginEnd"
                    enabled="{= Boolean(${oConfigModel>/productsSelectedItems}.length)}"
                    press=".onDeleteV2Products">
                </Button>
                <Button
                    text="{i18n>buttonAdd}"
                    press=".onOpenProductCreationV2Dialog">
                </Button>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="{i18n>columnName}" />
            </Column>
            <Column
                minScreenWidth="Small"
                demandPopin="true">
                <Text text="{i18n>columnDescription}" />
            </Column>
            <Column
                minScreenWidth="Small"
                demandPopin="true">
                <Text text="{i18n>columnReleaseDate}" />
            </Column>
            <Column
                minScreenWidth="Small"
                demandPopin="true">
                <Text text="{i18n>columnDiscontinuedDate}" />
            </Column>
            <Column
                minScreenWidth="Small"
                demandPopin="true">
                <Text text="{i18n>columnRating}" />
            </Column>
            <Column
                hAlign="End"
                width="10em"
                minScreenWidth="Small"
                demandPopin="true">
                <Text text="{i18n>columnPrice}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <ObjectIdentifier 
                        title="{oDataV2>Name}" />
                    <Text
                        text="{oDataV2>Description}" />
                    <Text
                        text="{
                            path: 'oDataV2>ReleaseDate',
                            type: 'sap.ui.model.odata.type.DateTime'
                        }" />
                    <Text
                        text="{
                            path: 'oDataV2>DiscontinuedDate',
                            type: 'sap.ui.model.odata.type.DateTime'
                        }"/>
                    <Text
                        text="{oDataV2>Rating}"/>
                    <Text
                        text="{oDataV2>Price}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>