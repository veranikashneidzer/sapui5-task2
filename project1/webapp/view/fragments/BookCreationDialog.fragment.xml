<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
        id="bookCreationDialog"
        title ="{i18n>bookCreationDialogHeaderText}"
        class="sapUiResponsivePadding--content sapUiResponsivePadding--header sapUiResponsivePadding--footer sapUiResponsivePadding--subHeader">
        <content>
            <Input
                value="{booksModel>name}"
                placeholder="{i18n>bookCreationDialogNamePlaceholder}"
                required="true"
                />
            <Input
                value="{booksModel>author}"
                placeholder="{i18n>bookCreationDialogAuthorPlaceholder}"
                required="true"
                />
            <Input
                value="{booksModel>genre}"
                placeholder="{i18n>bookCreationDialogGenrePlaceholder}"
                required="true"
                />
            <Input
                type="Date"
                value="{booksModel>releaseDate}"
                placeholder="{i18n>bookCreationDialogReleaseDatePlaceholder}"
                required="true"
                />
            <Input
                type="Number"
                value="{booksModel>availableQuantity}"
                placeholder="{i18n>bookCreationDialogAvailableQuantityPlaceholder}"
                required="true"
                />
        </content>
        <beginButton>
            <Button
                text="{i18n>dialogAddButtonText}"
                press=".onSubmitBookCreation"/>
        </beginButton>
        <endButton>
            <Button
                text="{i18n>dialogCancelButtonText}"
                press=".onCancelBookCreation"/>
        </endButton>
   </Dialog>
</core:FragmentDefinition>